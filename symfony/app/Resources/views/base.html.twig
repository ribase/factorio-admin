    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>{% block title %}Factorio Admin{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/css/foundation.min.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('styles/css/app.css') }}"/>
    <script type="text/javascript" src="{{ asset('styles/js/vendor/jquery.js') }}"></script>
    <script type="text/javascript" src="{{ asset('styles/js/vendor/foundation.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('styles/js/app.js') }}"></script>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    <link href="https://fonts.googleapis.com/css?family=Orbitron" rel="stylesheet">
</head>
<body>
<div class="loadwrapper">
    <div class="loading"></div>
    <div class="text"></div>
</div>


{% for flash_message in app.session.flashBag.get('notice') %}
    <div class="flash-notice success callout" data-closable>
        {{ flash_message }}
        <button class="close-button" aria-label="Dismiss alert" type="button" data-close>
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
{% endfor %}
{% for flash_message in app.session.flashBag.get('error') %}
    <div class="flash-notice alert callout" data-closable>
        {{ flash_message }}
        <button class="close-button" aria-label="Dismiss alert" type="button" data-close>
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
{% endfor %}
<div class="top-bar">
    <div class="top-bar-title">
    <span data-responsive-toggle="responsive-menu" data-hide-for="medium">
      <button class="menu-icon dark" type="button" data-toggle></button>
    </span>
        <strong>Factorio Admin</strong>
    </div>
    <div id="responsive-menu">
        <div class="top-bar-right">
            <ul class="dropdown menu">
                {% if app.user %}
                <li>
                    <a href="{{ path('homepage') }}">Dashboard</a>
                </li>
                <li>
                    <a href="{{ path('Updatefactorio') }}">Update</a>
                </li>
                <li>
                    <a href="#">Help</a>
                </li>
                <li>
                    <a href="#">Info</a>
                </li>

                <li>
                    <a href="{{ path('logout') }}">Logout</a>
                </li>
                {% else %}
                    <li>
                        <a href="{{ path('login') }}">Login</a>
                    </li>

                {% endif %}

            </ul>
        </div>
    </div>
</div>
<div class="row">
    <div class="small-12 columns">
        {% block body %}{% endblock %}
    </div>
</div>
{% block javascripts %}{% endblock %}
</body>
</html>
